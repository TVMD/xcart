    </td>
    <td>
      <select id="settings_isPayPal" name="settings[isPayPal]">
        <option value="1" {% if this.isSelected(this.paymentMethod.getSetting('isPayPal'), '1') %} selected="selected" {% endif %}>{{ t('Yes') }}</option>
        <option value="0" {% if this.isSelected(this.paymentMethod.getSetting('isPayPal'), '0') %} selected="selected" {% endif %}>{{ t('No') }}</option>
      </select>
    </td>
  </tr>
  <tr>
    <td class="setting-name">
      <label for="settings_paypalButtonColor">{{ t('Button color') }}</label>
    </td>
    <td>
      <select id="settings_paypalButtonColor" name="settings[paypalButtonColor]">
        <option value="gold" {% if this.isSelected(this.paymentMethod.getSetting('paypalButtonColor'), 'gold') %} selected="selected" {% endif %}>{{ t('Gold') }}</option>
        <option value="silver" {% if this.isSelected(this.paymentMethod.getSetting('paypalButtonColor'), 'silver') %} selected="selected" {% endif %}>{{ t('Silver') }}</option>
        <option value="blue" {% if this.isSelected(this.paymentMethod.getSetting('paypalButtonColor'), 'blue') %} selected="selected" {% endif %}>{{ t('Blue') }}</option>
      </select>
    </td>
  </tr>
  <tr>
    <td class="setting-name">
      <label for="settings_paypalButtonShape">{{ t('Button shape') }}</label>
    </td>
    <td>
      <select id="settings_paypalButtonShape" name="settings[paypalButtonShape]">
        <option value="pill" {% if this.isSelected(this.paymentMethod.getSetting('paypalButtonShape'), 'pill') %} selected="selected" {% endif %}>{{ t('Pill') }}</option>
        <option value="rect" {% if this.isSelected(this.paymentMethod.getSetting('paypalButtonShape'), 'rect') %} selected="selected" {% endif %}>{{ t('Rect') }}</option>
      </select>
    </td>
  </tr>
</table>

