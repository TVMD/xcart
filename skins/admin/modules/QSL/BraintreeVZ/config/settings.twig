{##
 # Braintree payments configuration page (payment method settings)
 #
 #}

<div id="braintree-settings-config">

  {{ widget('\\XLite\\Module\\QSL\\BraintreeVZ\\View\\Config\\HTTPSWarning', useBodyTemplate='1') }}

  {{ widget('\\XLite\\View\\Payment\\MethodStatus', method=this.paymentMethod) }}

  <table cellspacing="1" cellpadding="5" class="settings-table">
    <tr>
      <td class="setting-name">
        <label for="settings_merchantAccountId">{{ t('Merchant account ID') }}</label>
      </td>
      <td>
		<input type="text" id="settings_merchantAccountId" value="{{ this.paymentMethod.getSetting('merchantAccountId') }}" name="settings[merchantAccountId]" />
        &nbsp;{{ widget('XLite\\View\\Tooltip', id='settings_merchantAccountId_help', text=t('braintree_merchant_account_id_help')|raw, caption='', isImageTag='true', className='help-icon') }}
      </td>
    </tr>
    <tr>
      <td class="setting-name">
        <label for="settings_isAutoSettle">{{ t('Auto settle') }}</label>
      </td>
      <td>
      <select id="settings_isAutoSettle" name="settings[isAutoSettle]">
        <option value="1" {% if this.isSelected(this.paymentMethod.getSetting('isAutoSettle'), '1') %} selected="selected" {% endif %}>{{ t('Yes') }}</option>
        <option value="0" {% if this.isSelected(this.paymentMethod.getSetting('isAutoSettle'), '0') %} selected="selected" {% endif %}>{{ t('No') }}</option>
      </select>
      </td>
    </tr>
    <tr>
      <td class="setting-name">
        <label for="settings_prefix">{{ t('Braintree invoice number prefix') }}</label>
      </td>
      <td>
        <input type="text" id="settings_prefix" value="{{ this.paymentMethod.getSetting('prefix') }}" name="settings[prefix]" />
      </td>
    </tr>
    <tr>
      <td class="setting-name">
        <label for="settings_kountMerchantId">{{ t('Kount merchant ID') }}</label>
      </td>
      <td>
      <input type="text" id="settings_kountMerchantId" name="settings[kountMerchantId]" value="{{ this.paymentMethod.getSetting('kountMerchantId') }}" class="validate[maxSize[255]]" />
      </td>
    </tr>
  </table>

</div>

<div class="paypal-block">

  <img src="https://s3-us-west-1.amazonaws.com/bt-partner-assets/paypal-braintree.png" alt="PayPal powered by Braintree" class="braintree-logo" />

  <p>
    {{ t('Easily accept credit and debit cards and PayPal on multiple devices with no setup or monthly fees. Click the button beloow to connect your account') }}
    <br />
    <a href="https://www.braintreepayments.com/partners/learn-more" target="_blank" class="paypal-info">{{ t('Get more information') }}</a>
  </p>
</div>

<div class="clearfix"></div>

<legend><h3>{{ t('PayPal') }}</h3></legend>

