{##
 # Review rating selection template
 #}
<select name="rating">
  {% if this.getParam('allOption') %}
    <option value="%" {% if this.isSelected('%', this.getParam('value')) %} selected="selected" {% endif %}>{{ t('Any rating') }}</option>
  {% endif %}
  {% for key, title in this.getRatingsList() %}
  <option value="{{ key }}"{% if this.isSelected(key, this.getParam('value')) %} selected="selected"{% endif %}>{{ title }}</option>
  {% endfor %}
</select>
