{##
 # Code template
 #}

{% form '\\XLite\\Module\\XC\\ThemeTweaker\\View\\Form\\Code' with {className: 'custom-code-form'} %}

  <div class="formfield-use">
      {{ widget('XLite\\View\\FormField\\Input\\Checkbox\\OnOff', label=t(this.getUseCustomText()), value=this.isUsed(), fieldId='use_custom', fieldName='use') }}
  </div>

  <div class="formfield-code">
    {{ widget('\\XLite\\Module\\XC\\ThemeTweaker\\View\\FormField\\Textarea\\CodeMirror', fieldName='code', cols='140', rows='20', fieldId='code', codeMode=this.getCodeMode(), value=this.getFileContent(), fieldOnly='true') }}
  </div>

  <div class="buttons model-form-buttons">
    {{ widget('\\XLite\\View\\Button\\Submit', style='action regular-main-button', label='Save changes') }}
  </div>

{% endform %}
