{% if this.isInstalled(this.module) %}
  {% if this.isEnabled(this.module) %}
    <div class="installed">{{ t('Installed') }}</div>
  {% else %}
    <div class="installed-disabled">{{ t('Disabled') }}</div>
  {% endif %}
{% endif %}
