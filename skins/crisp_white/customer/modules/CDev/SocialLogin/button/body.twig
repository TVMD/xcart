 # Social Login sign-in button (button style)
 #}

<li class="{{ this.getStyleClass() }}">
  <a href="{{ this.getAuthRequestUrl() }}">
    <i class="fa {{ this.getFontAwesomeClass() }}"></i>
    <span class="provider-name"><span class="action-label">{{ t('Login with') }}</span> {{ this.getName() }}</span>
  </a>
</li>
