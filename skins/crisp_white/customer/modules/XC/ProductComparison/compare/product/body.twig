<div class="add-to-compare product compare-checkbox">
  <input id="{{ this.getCheckboxId(this.product.product_id) }}" type="checkbox" data-id="{{ this.product.product_id }}"{% if this.isChecked(this.product.product_id) %} checked="checked"{% endif %} />
  <label for="{{ this.getCheckboxId(this.product.product_id) }}"></label>
  <label for="{{ this.getCheckboxId(this.product.product_id) }}" class="label-add-to-compare">{{ t('Add to compare') }}</label>
  <label for="{{ this.getCheckboxId(this.product.product_id) }}" class="label-added-to-compare">{{ t('Added to comparison table') }}</label>
</div>
