{##
 # Checkout : Display X-Payments iframe (and save card checkbox for old API)
 #
 #}

<div class="xpc-box">
  {{ widget('\\XLite\\Module\\CDev\\XPaymentsConnector\\View\\Checkout\\Iframe') }}
  {% if this.isOldSaveCardBoxAvailable() %}
    <div class="{{ this.getSaveCardBoxClass() }}" {% if not this.showSaveCardBox() %} style="display: none;"{% endif %}>
      <label for="save-card">
        <input type="checkbox" name="save_card" value="Y" id="save-card" />
        {{ t('I want to use this credit card for my future orders in this shop.')|raw }}
      </label>
    </div>
  {% endif %}
</div>
